{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Outputs": {
    "DataBucketArn": {
      "Value": {
        "Fn::GetAtt": [
          "DataBucket",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-DataBucketArn"
        }
      }
    },
    "DataBucketName": {
      "Value": {
        "Ref": "DataBucket"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-DataBucketName"
        }
      }
    },
    "DeploymentBucketArn": {
      "Value": {
        "Fn::GetAtt": [
          "DeploymentBucket",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-DeploymentBucketArn"
        }
      }
    },
    "DeploymentBucketName": {
      "Value": {
        "Ref": "DeploymentBucket"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-DeploymentBucketName"
        }
      }
    },
    "QueueArn": {
      "Value": {
        "Fn::GetAtt": [
          "Queue",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-QueueArn"
        }
      }
    },
    "QueueUrl": {
      "Value": {
        "Ref": "Queue"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-QueueUrl"
        }
      }
    },
    "SecretArn": {
      "Value": {
        "Ref": "Secret"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-SecretArn"
        }
      }
    },
    "WebAppBucketArn": {
      "Value": {
        "Fn::GetAtt": [
          "WebAppBucket",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-WebAppBucketArn"
        }
      }
    },
    "WebAppBucketName": {
      "Value": {
        "Ref": "WebAppBucket"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-WebAppBucketName"
        }
      }
    },
    "WebAppRepositoryArn": {
      "Value": {
        "Fn::GetAtt": [
          "WebAppRepository",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-WebAppRepositoryArn"
        }
      }
    },
    "WebAppRepositoryUri": {
      "Value": {
        "Fn::GetAtt": [
          "WebAppRepository",
          "RepositoryUri"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-WebAppRepositoryUri"
        }
      }
    }
  },
  "Resources": {
    "WebAppRepository": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": {
          "Fn::Sub": "${AWS::StackName}-web-app-repository"
        }
      }
    },
    "DataBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "${AWS::StackName}-data-bucket"
        },
        "NotificationConfiguration": {
          "QueueConfigurations": [
            {
              "Event": "s3:ObjectCreated:Put",
              "Queue": {
                "Fn::GetAtt": [
                  "Queue",
                  "Arn"
                ]
              }
            }
          ]
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        }
      }
    },
    "DeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "${AWS::StackName}-deployment-bucket"
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        }
      }
    },
    "WebAppBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "${AWS::StackName}-web-app-bucket"
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        }
      }
    },
    "Queue": {
      "Type": "AWS::SQS::Queue",
      "Properties": {
        "QueueName": {
          "Fn::Sub": "${AWS::StackName}-queue"
        },
        "VisibilityTimeout": 900
      }
    },
    "QueuePolicy": {
      "Type": "AWS::SQS::QueuePolicy",
      "Properties": {
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": {
            "Action": "SQS:SendMessage",
            "Principal": {
              "Service": "s3.amazonaws.com"
            },
            "Effect": "Allow",
            "Resource": {
              "Fn::GetAtt": [
                "Queue",
                "Arn"
              ]
            },
            "Condition": {
              "StringEquals": {
                "aws:SourceAccount": {
                  "Fn::Sub": "${AWS::AccountId}"
                }
              },
              "ArnLike": {
                "aws:SourceArn": {
                  "Fn::Sub": [
                    "arn:aws:s3:::${DataBucketName}",
                    {
                      "DataBucketName": {
                        "Fn::Sub": "${AWS::StackName}-data-bucket"
                      }
                    }
                  ]
                }
              }
            }
          }
        },
        "Queues": [
          {
            "Ref": "Queue"
          }
        ]
      }
    },
    "Secret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-secret"
        },
        "SecretString": "{\"CONTENTFUL_WEBHOOK_AUTH_PASSWORD\":\"\",\"CONTENTFUL_WEBHOOK_AUTH_USERNAME\":\"\",\"UPDATE_GITHUB_GITHUB_PERSONAL_ACCESS_TOKEN\":\"\",\"WEB_APP_CMS_CLIENT_ACCESS_TOKEN\":\"\",\"WEB_APP_CMS_CLIENT_SPACE\":\"\"}"
      }
    }
  }
}
