{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Outputs": {
    "DistributionId": {
      "Value": {
        "Ref": "Distribution"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-DistributionId"
        }
      }
    }
  },
  "Parameters": {
    "GoogleVerificationResourceRecord": {
      "Default": "\"google-site-verification=QSpbzAoi-CcfCwDXcOi-UeUfxDPQXNAwfy70ICPZZok\"",
      "Type": "String"
    },
    "DomainName": {
      "Description": "Domain Name for Route 53",
      "Type": "String"
    },
    "MxFirstResourceRecord": {
      "Default": "10 mx1.improvmx.com.",
      "Type": "String"
    },
    "MxSecondResourceRecord": {
      "Default": "20 mx2.improvmx.com.",
      "Type": "String"
    },
    "PersistentStackName": {
      "Description": "Name of previously deployed \"Persistent\" CloudFormation Stack",
      "Type": "String"
    },
    "SpfResourceRecord": {
      "Default": "\"v=spf1 include:spf.improvmx.com ~all\"",
      "Type": "String"
    }
  },
  "Resources": {
    "Certificate": {
      "Type": "AWS::CertificateManager::Certificate",
      "Properties": {
        "DomainName": {
          "Ref": "DomainName"
        },
        "DomainValidationOptions": [
          {
            "DomainName": {
              "Ref": "DomainName"
            },
            "HostedZoneId": {
              "Ref": "HostedZone"
            }
          },
          {
            "DomainName": {
              "Fn::Sub": "www.${DomainName}"
            },
            "HostedZoneId": {
              "Ref": "HostedZone"
            }
          }
        ],
        "SubjectAlternativeNames": [
          {
            "Fn::Sub": "www.${DomainName}"
          }
        ],
        "ValidationMethod": "DNS"
      }
    },
    "WebAppBucketOriginAccessIdentity": {
      "Type": "AWS::CloudFront::CloudFrontOriginAccessIdentity",
      "Properties": {
        "CloudFrontOriginAccessIdentityConfig": {
          "Comment": {
            "Fn::Sub": "${AWS::StackName}-web-app-bucket-origin-access-identity"
          }
        }
      }
    },
    "Distribution": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "Aliases": [
            {
              "Ref": "DomainName"
            },
            {
              "Fn::Sub": "www.${DomainName}"
            }
          ],
          "CustomErrorResponses": [
            {
              "ErrorCode": 403,
              "ResponseCode": 200,
              "ResponsePagePath": "/index.html"
            }
          ],
          "DefaultCacheBehavior": {
            "CachePolicyId": "658327ea-f89d-4fab-a63d-7e88639e58f6",
            "Compress": true,
            "TargetOriginId": "WebAppBucketOrigin",
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "DefaultRootObject": "index.html",
          "Enabled": true,
          "HttpVersion": "http2",
          "Origins": [
            {
              "DomainName": {
                "Fn::Sub": [
                  "${WebAppBucketName}.s3.${AWS::Region}.amazonaws.com",
                  {
                    "WebAppBucketName": {
                      "Fn::ImportValue": {
                        "Fn::Sub": "${PersistentStackName}-WebAppBucketName"
                      }
                    }
                  }
                ]
              },
              "Id": "WebAppBucketOrigin",
              "S3OriginConfig": {
                "OriginAccessIdentity": {
                  "Fn::Sub": "origin-access-identity/cloudfront/${WebAppBucketOriginAccessIdentity}"
                }
              }
            }
          ],
          "ViewerCertificate": {
            "AcmCertificateArn": {
              "Ref": "Certificate"
            },
            "MinimumProtocolVersion": "TLSv1.2_2021",
            "SslSupportMethod": "sni-only"
          }
        }
      }
    },
    "HostedZone": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "Name": {
          "Ref": "DomainName"
        }
      }
    },
    "AAAARecordSet": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "AliasTarget": {
          "DNSName": {
            "Fn::GetAtt": [
              "Distribution",
              "DomainName"
            ]
          },
          "HostedZoneId": "Z2FDTNDATAQYW2"
        },
        "HostedZoneId": {
          "Ref": "HostedZone"
        },
        "Name": {
          "Ref": "DomainName"
        },
        "Type": "AAAA"
      }
    },
    "ARecordSet": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "AliasTarget": {
          "DNSName": {
            "Fn::GetAtt": [
              "Distribution",
              "DomainName"
            ]
          },
          "HostedZoneId": "Z2FDTNDATAQYW2"
        },
        "HostedZoneId": {
          "Ref": "HostedZone"
        },
        "Name": {
          "Ref": "DomainName"
        },
        "Type": "A"
      }
    },
    "MxRecordSet": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "HostedZoneId": {
          "Ref": "HostedZone"
        },
        "Name": {
          "Ref": "DomainName"
        },
        "ResourceRecords": [
          {
            "Ref": "MxFirstResourceRecord"
          },
          {
            "Ref": "MxSecondResourceRecord"
          }
        ],
        "TTL": "21600",
        "Type": "MX"
      }
    },
    "TxtRecordSet": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "HostedZoneId": {
          "Ref": "HostedZone"
        },
        "Name": {
          "Ref": "DomainName"
        },
        "ResourceRecords": [
          {
            "Ref": "GoogleVerificationResourceRecord"
          },
          {
            "Ref": "SpfResourceRecord"
          }
        ],
        "TTL": "300",
        "Type": "TXT"
      }
    },
    "WwwAAAARecordSet": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "AliasTarget": {
          "DNSName": {
            "Ref": "AAAARecordSet"
          },
          "HostedZoneId": {
            "Ref": "HostedZone"
          }
        },
        "HostedZoneId": {
          "Ref": "HostedZone"
        },
        "Name": {
          "Fn::Sub": "www.${DomainName}"
        },
        "Type": "AAAA"
      }
    },
    "WwwARecordSet": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "AliasTarget": {
          "DNSName": {
            "Ref": "ARecordSet"
          },
          "HostedZoneId": {
            "Ref": "HostedZone"
          }
        },
        "HostedZoneId": {
          "Ref": "HostedZone"
        },
        "Name": {
          "Fn::Sub": "www.${DomainName}"
        },
        "Type": "A"
      }
    },
    "WebAppBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Fn::ImportValue": {
            "Fn::Sub": "${PersistentStackName}-WebAppBucketName"
          }
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": "s3:GetObject",
              "Principal": {
                "AWS": {
                  "Fn::Sub": "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity ${WebAppBucketOriginAccessIdentity}"
                }
              },
              "Effect": "Allow",
              "Resource": {
                "Fn::Sub": [
                  "${WebAppBucketArn}/*",
                  {
                    "WebAppBucketArn": {
                      "Fn::ImportValue": {
                        "Fn::Sub": "${PersistentStackName}-WebAppBucketArn"
                      }
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  }
}
